<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvAnswer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="ANSWER 1"/>

    <EditText
        android:id="@+id/etAnswer2Part1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="WORD TO USE"
        app:layout_constraintTop_toBottomOf="@+id/tvAnswer1"/>
    <EditText
        android:id="@+id/etAnswer2Part2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ENTER LETTER TO REMOVE"
        app:layout_constraintTop_toBottomOf="@+id/etAnswer2Part1"/>

    <Button
        android:id="@+id/btnAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        app:layout_constraintTop_toBottomOf="@+id/etAnswer2Part2"/>

    <TextView
        android:id="@+id/tvAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnAnswer2"
        tools:text="ANWSER 2"/>

    <TextView
        android:id="@+id/tvAnswer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAnswer2"
        tools:text="ANSWER 3"/>

</androidx.constraintlayout.widget.ConstraintLayout>